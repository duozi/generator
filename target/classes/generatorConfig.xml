<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
  PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
  "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
  <classPathEntry location="lib/mysql-connector-java-5.1.21.jar" />

<!--targetRuntime取值参考： http://mybatis.github.io/generator/configreference/context.html -->
  <context id="MySQLTables" targetRuntime="MyBatis3Simple" defaultModelType="conditional">
  	<commentGenerator >
  		<property name="suppressAllComments" value="true"/><!-- 是否取消注释 --> 
  		<property name="suppressDate" value="false" /> <!-- 是否生成注释代时间戳-->  
  	</commentGenerator>
  	

  </context>
</generatorConfiguration>